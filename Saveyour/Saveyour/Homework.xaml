<Window x:Class="Saveyour.Homework" x:Name="hWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Title="Homework" Height="396" Width="374">
    <Grid x:Name="windowGrid">
        <Button x:Name="addSubjectButton" Content="Add Subject" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" Width="80" Click="addSubjectButton_Click"/>
        <StackPanel x:Name="homeworkPanel" HorizontalAlignment="Left" Height="306" Margin="20,50,0,0" VerticalAlignment="Top" Width="329" Orientation="Horizontal">
            <Grid x:Name="panelGrid" Margin="0,0,0,-0.4" Width="326">
                <TextBox x:Name="subjectBox" Text ="Change Subject Title Here!" VerticalContentAlignment="Center" HorizontalContentAlignment ="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Width="302" Height="35" Margin="10,0,14,0"/>
                <ListView x:Name="taskList" HorizontalAlignment="Left" Height="235" Margin="10,61,0,0" VerticalAlignment="Top" Width="306" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn x:Name="assignmentColumn" Header="Assignment" DisplayMemberBinding="{Binding AssignmentName}" Width="202"/>
                            <GridViewColumn x:Name="dateColumn" Header="Date" DisplayMemberBinding="{Binding AssignmentShortenedDate}" Width="45"/>
                            <GridViewColumn Header="Edit" Width="35">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="X"  Click = "deleteTask" CommandParameter="{Binding}" HorizontalAlignment="Stretch"/>
                                            <Button Content="Y"  Click = "deleteTask" CommandParameter="{Binding}" HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Content="Button" Click ="addTask" Margin="237,37,14,250"/>
            </Grid>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="20,4.985,0,0" VerticalAlignment="Top" Width="16" Height="20" Style="{DynamicResource DeleteStyle}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="49.667,4.985,0,0" VerticalAlignment="Top" Width="16" Height="20" Style="{DynamicResource ArchiveStyle}"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="20" Margin="77.667,4.985,0,0" VerticalAlignment="Top" Width="16" Style="{DynamicResource AddStyle}"/>
    </Grid>
</Window>
