<Window x:Class="Saveyour.WeeklyToDo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeeklyToDo" Height="589" Width="499">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="60,51,0,0" VerticalAlignment="Top" Width="200"/>
        <Grid x:Name="WeekGrid" Margin="0" IsEnabled="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border x:Name="MondayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top">
                <TextBlock x:Name="MondayTitle" TextWrapping="Wrap" Text="Monday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="MondayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="1">
                <TextBlock x:Name="MondayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14"/>
            </Border>
            <Border x:Name="TuesdayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="2">
                <TextBlock x:Name="TuesdayTitle" TextWrapping="Wrap" Text="Tuesday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="TuesdayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="3">
                <TextBlock x:Name="TuesdayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14"/>
            </Border>
            <Border x:Name="WednesdayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="4">
                <TextBlock x:Name="WednesdayTitle" TextWrapping="Wrap" Text="Wednesday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="WednesdayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="5">
                <TextBlock x:Name="WednesdayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14"/>
            </Border>
            <Border x:Name="ThursdayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="6">
                <TextBlock x:Name="ThursdayTitle" TextWrapping="Wrap" Text="Thursday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="ThursdayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="7">
                <TextBlock x:Name="ThursdayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14"/>
            </Border>
            <Border x:Name="FridayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="8">
                <TextBlock x:Name="FridayTitle" TextWrapping="Wrap" Text="Friday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="FridayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="9">
                <TextBlock x:Name="FridayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14" />
            </Border>
            <Border x:Name="SaturdayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="10">
                <TextBlock x:Name="SaturdayTitle" TextWrapping="Wrap" Text="Saturday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="SaturdayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="11">
                <TextBlock x:Name="SaturdayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14" />
            </Border>
            <Border x:Name="SundayTitleBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="12">
                <TextBlock x:Name="SundayTitle" TextWrapping="Wrap" Text="Sunday" FontFamily="Calibri" FontSize="20" FontWeight="Bold" Margin="10,0,0,0"/>
            </Border>
            <Border x:Name="SundayTaskBorder" BorderBrush="Black" BorderThickness="1" Height="29" Margin="0" VerticalAlignment="Top" Grid.Row="13">
                <TextBlock x:Name="SundayTasks" TextWrapping="Wrap" FontFamily="Calibri" Margin="10,0,0,0" FontSize="14" />
            </Border>
        </Grid>

    </Grid>
</Window>
