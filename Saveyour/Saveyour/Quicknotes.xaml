<Window x:Class="Saveyour.Quicknotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quicknotes" Height="300" Width="300" Closing="onClosing" LostFocus="lostFocus">
    <Grid>
        <TextBox x:Name="QuicknotesText" Margin="0,42,0,0" TextWrapping="Wrap" Text="Type notes here!&#xD;&#xA;" AcceptsReturn="True" AcceptsTab="True" KeyUp="onKeyUp"/>
        <Button x:Name="RemoveQN" Content="X" HorizontalAlignment="Right" Margin="0,5,5,0" Height="32" Width="33" Click="RemoveQN_Click" VerticalAlignment="Top"/>
        <Button x:Name="AddQN" Content="+" HorizontalAlignment="Right" Margin="0,5,42,0" VerticalAlignment="Top" Height="32" Width="32" Click="AddQN_Click"/>

    </Grid>
</Window>
