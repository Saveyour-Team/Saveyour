<Window x:Class="TaskBatch.ConfirmationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="187.5" Width="368.182" WindowStyle="None" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize">
    <Border BorderBrush="White" BorderThickness="2,2,2,2" CornerRadius="30,30,30,30" Background="#FF44B9FF">
        <Grid>
            <TextBlock x:Name="Message" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Height="111" Width="241" FontSize="22"/>
            <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="62,130,0,0" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="228,130,0,0" Click="btnNo_Click"/>

        </Grid>
    </Border>
</Window>
