<Window x:Class="Saveyour.Homework" x:Name="hWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Homework" Height="325.628" Width="1037.074">
    <Grid x:Name="HGrid">
        <GroupBox x:Name="subject1" Header="Subject 1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="278" Width="300">
            <Grid>
                <RichTextBox x:Name="Task" HorizontalAlignment="Left" Height="237" Margin="10,10,0,0" VerticalAlignment="Top" Width="181" TextChanged="Task_TextChanged">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Testing"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <RichTextBox x:Name="Date" HorizontalAlignment="Left" Height="237" Margin="191,10,0,0" VerticalAlignment="Top" Width="85" TextChanged="RichTextBox_TextChanged">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="Date"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
            
        </GroupBox>

        <GroupBox Header="Subject 2" HorizontalAlignment="Left" Margin="343,10,0,0" VerticalAlignment="Top" Height="278" Width="300">

        </GroupBox>
        <GroupBox Header="Subject 3" HorizontalAlignment="Left" Margin="672,10,0,0" VerticalAlignment="Top" Height="278" Width="300"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="995,259,0,0" VerticalAlignment="Top" Width="32" Height="29"/>
        

    </Grid>
</Window>
