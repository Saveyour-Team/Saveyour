<Window x:Class="Saveyour.AddHomeworkSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddHomeworkSubject" Height="100" Width="300">
    <Grid>
        <TextBox x:Name="Subject" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" Text="Input Subject Here!" HorizontalContentAlignment="Center" TextChanged="TextBox_TextChanged" MouseDoubleClick="Subject_MouseDoubleClick"/>
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Click"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="210,42,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        <Label x:Name ="Empty" Content="Subject Blank!" HorizontalAlignment="Left" Margin="105,39,0,0" VerticalAlignment="Top" Width="85"/>

    </Grid>
</Window>
