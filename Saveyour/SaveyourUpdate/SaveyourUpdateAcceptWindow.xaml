<Window x:Class="SaveyourUpdate.SaveyourUpdateAcceptWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaveyourUpdateAcceptWindow" Height="187.5" Width="368.182">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="115,10,0,0" TextWrapping="Wrap" Text="An Update is available! Would you like to download it now?" VerticalAlignment="Top" Height="71" Width="235" FontSize="18" TextAlignment="Center"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="115,127,0,0" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="195,127,0,0" VerticalAlignment="Top" Width="75" Click="btnNo_Click"/>
        <Button x:Name="btnDetails" Content="Details" HorizontalAlignment="Left" Margin="275,127,0,0" VerticalAlignment="Top" Width="75" Click="btnDetails_Click"/>
        <Label x:Name="lblNewVersion" Content="" HorizontalAlignment="Left" Margin="137,92,0,0" VerticalAlignment="Top" Width="196"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="Images/update.GIF"/>

    </Grid>
</Window>
